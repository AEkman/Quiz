<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <h3 class="page-header"><a href="#col1createuser" data-toggle="collapse">Create User</a></h3>
    <div id="col1createuser" class="collapse">
        <form method="post" action="/settings" id="createUser">
            <div class="form-group">
                <label>Mailadress</label>
                <input type="email" name="mail" class="form-control" placeholder="Mailadress" required>
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" name="name" class="form-control" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label>Group</label>
                <input type="text" name="groups" class="form-control" placeholder="Group" required>
            </div>
            <div class="form-group">
                <label>Account Level</label>
                <select name="accountLevel">
                    <option value="User">User</option>
                    <option value="Creator">Creator</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Create User</button>
        </form>
    </div>
</div>